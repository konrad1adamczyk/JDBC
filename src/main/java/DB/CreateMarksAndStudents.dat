-- Create table Students

CREATE TABLE STUDENTS
    (ID INT PRIMARY KEY,
    NAME VARCHAR(255),
    EMAIL VARCHAR(255),
    GROUP_ID INT,
    FOREIGN KEY(GROUP_ID)
       REFERENCES GROUPS(ID));

-- Create table Marks

CREATE TABLE MARKS
    (ID INT PRIMARY KEY,
    STUDENT_ID INT,
    FOREIGN KEY(STUDENT_ID)
       REFERENCES STUDENTS(ID),
    COURSE_ID INT,
    FOREIGN KEY(COURSE_ID)
       REFERENCES COURSES(ID),
    MARK INT,
    COMMENTS VARCHAR(255));


